{
  "name": "pullis",
  "version": "1.0.0",
  "description": "GitHub to Slack notification service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "migrate:up": "knex migrate:latest",
    "migrate:down": "knex migrate:rollback",
    "db:init": "ts-node scripts/init-db.ts",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:make-migration": "knex migrate:make",
    "db:seed": "knex seed:run",
    "clean": "rimraf dist",
    "prestart": "npm run build",
    "predev": "npm run db:migrate"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@octokit/app": "^14.0.0",
    "@octokit/webhooks": "^11.8.0",
    "@slack/bolt": "^3.15.0",
    "@slack/web-api": "^6.11.0",
    "dotenv": "^16.3.1",
    "knex": "^3.0.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-cors": "^0.0.2",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/koa": "^2.13.12",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-cors": "^0.0.3",
    "@types/koa__router": "^12.0.1",
    "@types/node": "^20.5.7",
    "@types/pg": "^8.10.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
